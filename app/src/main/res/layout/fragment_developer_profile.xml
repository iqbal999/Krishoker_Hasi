<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize">


    <TextView
        android:id="@+id/profile_1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iqbal"
        android:gravity="center"
        android:textColor="#000"
        android:background="#d5fa99"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/profile_2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mozid"
        android:gravity="center"
        android:textColor="#000"
        android:background="#d5fa99"
        android:layout_below="@id/profile_1"/>

    <TextView
        android:id="@+id/profile_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_2"
        android:layout_marginTop="5dp"
        android:background="#d5fa99"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/shimu"
        android:textColor="#000" />
</RelativeLayout>